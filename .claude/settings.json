{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1860000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(aerospace reload-config:*)",
      "Bash(brew upgrade:*)",
      "Bash(helm:*)",
      "Bash(kubectl:*)",
      "Bash(task:*)",
      "Bash(helmfile:*)",
      "Bash(replicated:*)",
      "Bash(gcloud:*)",
      "Bash(docker:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(yamllint:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(which:*)",
      "Bash(yadm:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(kubectl delete namespace:*)"
    ]
  },
  "enableAllProjectMcpServers": false,
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/user-prompt-submit-mcp-reminder.py"
          }
        ]
      }
    ]
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754064217555
  },
  "allowList": [
    "yadm:*"
  ],
  "alwaysThinkingEnabled": false
}
