{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1860000",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(aerospace reload-config:*)",
      "Bash(aerospace list-workspaces:*)",
      "Bash(aerospace:*)",
      "Bash(brew upgrade:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(claude plugin list:*)",
      "Bash(docker:*)",
      "Bash(find:*)",
      "Bash(gcloud:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(golangci-lint:*)",
      "Bash(grep:*)",
      "Bash(helm template:*)",
      "Bash(helm:*)",
      "Bash(helmfile:*)",
      "Bash(kubectl:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mdls:*)",
      "Bash(mkdir:*)",
      "Bash(osascript:*)",
      "Bash(pgrep:*)",
      "Bash(python3:*)",
      "Bash(replicated:*)",
      "Bash(ssh:*)",
      "Bash(task:*)",
      "Bash(tree:*)",
      "Bash(which:*)",
      "Bash(yadm status:*)",
      "Bash(yadm diff:*)",
      "Bash(yadm add:*)",
      "Bash(yadm commit:*)",
      "Bash(yadm push:*)",
      "Bash(yadm:*)",
      "Bash(yamllint:*)",
      "Bash(yq eval:*)",
      "Edit(file_path:/Users/ada/notes/*)",
      "mcp__sequential-thinking",
      "Read(file_path:/Users/ada/notes/*)",
      "Skill(replicated-cli)",
      "Skill(superpowers:*)",
      "Skill(yadm-utilities)",
      "SlashCommand(/superpowers:brainstorm)",
      "WebFetch(domain:angel-legion.fandom.com)",
      "WebFetch(domain:cloudnative-pg.io)",
      "WebFetch(domain:docs.replicated.com)",
      "WebFetch(domain:hyper3d.ai)",
      "WebFetch(domain:steamcommunity.com)",
      "WebFetch(domain:*)",
      "WebSearch",
      "Write(file_path:/Users/ada/notes/*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(kubectl delete namespace:*)",
      "Bash(yadm rm:*)"
    ],
    "ask": [],
    "defaultMode": "default"
  },
  "model": "opus[1m]",
  "enableAllProjectMcpServers": false,
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/user-prompt-submit-mcp-reminder.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "devops-toolkit@devops-toolkit": true,
    "elements-of-style@superpowers-marketplace": true,
    "episodic-memory@superpowers-marketplace": true,
    "superpowers@superpowers-marketplace": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "gopls-lsp@claude-plugins-official": true,
    "systems-programming@claude-code-workflows": true,
    "cloud-infrastructure@claude-code-workflows": true,
    "kubernetes-operations@claude-code-workflows": true
  },
  "outputStyle": "default",
  "spinnerTipsEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754064217555
  }
}
