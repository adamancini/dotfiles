{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1860000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(aerospace reload-config:*)",
      "Bash(brew upgrade:*)",
      "Bash(helm:*)",
      "Bash(kubectl:*)",
      "Bash(task:*)",
      "Bash(helmfile:*)",
      "Bash(replicated:*)",
      "Bash(gcloud:*)",
      "Bash(docker:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(yamllint:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(which:*)",
      "Bash(yadm:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(kubectl delete namespace:*)"
    ]
  },
  "enableAllProjectMcpServers": false,
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/user-prompt-submit-mcp-reminder.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "agent-sdk-dev@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "explanatory-output-style@claude-code-plugins": true,
    "learning-output-style@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true,
    "hookify@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "elements-of-style@superpowers-marketplace": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "devops-toolkit@devops-toolkit": true
  },
  "alwaysThinkingEnabled": false,
  "feedbackSurveyState": {
    "lastShownTime": 1754064217555
  },
  "allowList": [
    "yadm:*"
  ]
}
